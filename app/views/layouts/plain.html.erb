      background-color: #F6F6EF;
      /* background-color: #F7EEE5; */
      /* background-color: #F5F7EE; */
      margin-top: 12px;
      margin-bottom: 125px;
      font-size: 15px;
    }

    a{
      color: black;
    }

    #container{
      width: 1040px;
      margin: auto;
    }

    #course_title{
      margin-bottom: 32px;
      font-size: 18px;
    }

    #side_bar{
      width: 270px;
      float: left;
    }

    .side_bar_links{
      display: block;
      margin-top: 3px;
      text-decoration: none;
    }

    .practice_link{
      color: #262626;
      margin-bottom: 14px;
    }

    #lesson_content{
      width: 760px;
      float: left;     
    }

    #lesson_title{
      margin-top: 0px;
    }

    #lesson_footer{
      /* container of prev and next link */
      margin-top: 28px;
    }

    #previous_link{
      font-size: 16px;
    }

    #next_link{
      float: right; 
      font-size: 16px;
    }

    #ask_tutor_link{
      margin-right: 12px;
      padding: 3px 7px 3px 7px;
      /* background-color: #B0E46E; */
      text-decoration: underline;
    }

    .vid_title{
      font-weight: bold; 
      font-size: 18px;
    }

    .vid_description{
      margin-top: 6px;
      width: 468px;
      line-height: 1.32;
    }

    .to_practice_btn{
      background-color: #DEDED4; 
      padding: 4px 12px;
      text-decoration: none;
      font-size: 15px;
      border: 2px solid lightgrey;
    }


    .link_overlay{
       position: absolute; 
       top: 0; 
       left: 0; 
       z-index: 10; 
       background-color: orange; 
       width: 214px; 
       text-align: right; 
       color: orange; 
       opacity: 0.2;
     }

     .faq_question{
        font-weight: bold;
        margin-bottom: 6px;
     }

     .faq_answer{
        font-weight: normal;
        margin-top: 0px;
        margin-bottom: 42px;
     }

  </style>

