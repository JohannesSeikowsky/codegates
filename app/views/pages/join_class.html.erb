            <br>
            <%= f.radio_button :content, "Sunday" %> 
            <%= f.label :content, "Sunday", :value => "Sunday" %>
            </div>
            
            <div style="width: 150px; float: left;">
            <p style="text-decoration: none;"> Preferred time (UK) </p>
            <%= f.radio_button :time, "18.00-19.00" %> 
            <%= f.label :time, "18.00-19.00", :value => "18.00-19.00" %>
            <br>
            <%= f.radio_button :time, "19.00-20.00" %> 
